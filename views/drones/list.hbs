{{!-- ajout lien pointant vers drone  --}}

{{!-- CREATE --}}
<a href="/drones/create"> COME ON, add a fantastic drone !</a>

{{!-- LIST --}}
{{#if drones.length}}

    <ul id ="list-drones">
        {{#each drones}}
        
           <li>
               <h3>Drone name : {{this.name}}</h3> 
               <p>Number of propellers : {{this.propellers}}</p>
               <p>Max speed : {{this.maxSpeed}}</p>
           </li>
            
            {{!-- EDIT --}}
            <a href="/drones/{{this.id}}/edit"> Edit Drone</a> <br>
            {{!-- <a href="/drones/{{this.id}}/delete"> Bye bye Drone</a> --}}

            {{!-- DELETE --}}
            <form action="/drones/{{_id}}/delete" method="post">
                <button>Delete</button>
            </form>
            {{!-- √ßa a fonctionn√© avec le form, mais pas le <a></a> --}}

        {{/each}} 
    </ul>

{{else}}
    <p>Sooorry no drone yet</p>

{{/if}}

